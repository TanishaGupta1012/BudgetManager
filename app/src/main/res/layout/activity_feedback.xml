<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FeedbackActivity"
    android:orientation="vertical"
    android:background="@drawable/splash">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your valuable feedback!"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We would love to hear from you."
        android:textSize="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/feedback"
        android:background="@drawable/userprofilebackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:hint="Give us your feedback..."
        android:padding="10dp"/>

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I Agree the terms and conditions"
        android:textSize="18dp"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/loginbuttondesign"/>

</LinearLayout>